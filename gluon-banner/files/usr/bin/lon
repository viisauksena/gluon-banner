#!/bin/sh
if [ $# != 1 ] ; then printf "usage: $0 <longitude|status>\nexample : $0 5.6789"; exit 1;
fi

case "$1" in
        "?"|status)
                uci get gluon-node-info.@location[0].longitude
                ;;
        *)
		uci set gluon-node-info.@location[0].longitude=$1
                uci commit gluon-node-info
                ;;                                                                                                                                                                  
esac
