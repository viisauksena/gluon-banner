#!/bin/sh
if [ $# != 1 ] ; then echo "usage: $0 <1|0|status>"; exit 1;
fi
case "$1" in
        1|on|0|off)
		eni=$1
		if [ $1 = "on" ];then eni=1 ;fi
		if [ $1 = "off" ];then eni=0 ;fi
	        uci set fastd.mesh_vpn.enabled=$eni
        	uci commit fastd
	        /etc/init.d/fastd reload
                ;;
        "?"|status)
        	uci get fastd.mesh_vpn.enabled
		;;
esac
