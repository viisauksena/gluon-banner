#!/bin/sh
if [ $# != 1 ] ; then echo "usage: $0 1     or     $0 0"; exit 1;
fi
case "$1" in
        1|on|0|off)
		enni=$1
		if [ $1 = "on" ];then enni=1 ;fi
		if [ $1 = "off" ];then enni=1 ;fi
		uci set autoupdater.settings.enabled=$enni
	        uci commit
                ;;
        "?"|status)
                uci get autoupdater.settings.enabled
                ;;
esac
