#!/bin/sh
# script to generate wget string used on server or local computer to guess geo of node
# based on fuzzle/viisauksena toolbox getgeo.sh

: ${apikey:=test}

macs=$(iwinfo phy0 scan |grep -o -E [0-9A-F]{2}[:][0-9A-F]{2}[:][0-9A-F]{2}[:][0-9A-F]{2}[:][0-9A-F]{2}[:][0-9A-F]{2})
string=$(echo -n $(for mac in $macs; do echo -n "{\\\"macAddress\\\": \\\"$mac\\\"},"; done))
string=$(echo ${string%?})

echo "# you could use this on home computer or server to guess geo-location. mark/copy/paste as one long line!"
echo ""
echo -n "wget -q -O geodata https://location.services.mozilla.com/v1/geolocate?key=$apikey --post-data=\"{ \\\"wifiAccessPoints\\\": [$(echo -n $string)],\\\"considerIp\\\": \\\"false\\\"}\";"
echo "echo;echo -n \"uci set gluon-node-info.@location[0]='location'; uci set gluon-node-info.@location[0].share_location\='1'; uci set gluon-node-info.@location[0].latitude='\";cat geodata|cut -d\" \" -f3|tr -d ',\n';echo -n \"'; uci set gluon-node-info.@location[0].longitude='\";cat geodata |cut -d\" \" -f5|tr -d ',}\n';echo \"'; uci commit gluon-node-info\";echo"
echo ""
echo "# (this will not work here on the node because normal nodes can not do POST and can not do HTTPS)"
echo "# then paste the reult from your server back here"
